rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leer a cualquier usuario autenticado
    // Permite escribir solo al administrador
    match /informes/{informeId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'emiliogp@inditex.com';
    }

    // Permite leer a cualquier usuario autenticado
    // Permite escribir solo al administrador
    match /configuracion/{documento} {
       allow read: if request.auth != null;
       allow write: if request.auth != null && request.auth.token.email == 'emiliogp@inditex.com';
    }
  }
}