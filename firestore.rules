rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access for any authenticated user
    // Allow write access only for the admin user
    match /informes/{informeId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'emiliogp@inditex.com';
    }

    // Allow read access for any authenticated user
    // Allow write access only for the admin user
    match /configuracion/{documento} {
       allow read: if request.auth != null;
       allow write: if request.auth != null && request.auth.token.email == 'emiliogp@inditex.com';
    }
  }
}