rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Solo los usuarios autenticados pueden leer los informes y la configuraci√≥n.
    match /informes/{informeId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'emiliogp@inditex.com';
    }

    match /configuracion/{docId} {
       allow read: if request.auth != null;
       allow write: if request.auth != null && request.auth.token.email == 'emiliogp@inditex.com';
    }
  }
}
